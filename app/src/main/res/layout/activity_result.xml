<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_action_bar_splitter"
    tools:context="com.imcgeek.cameraapp.ResultActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="100dp"
        android:background="@color/common_signin_btn_dark_text_focused"
        android:layout_marginTop="100dp"
        android:id="@+id/result_ph"
        android:textSize="40dp"
        android:textColor="@color/pHColor"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="100dp"
        android:background="@color/common_signin_btn_dark_text_focused"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/result_n"
        android:textSize="40dp"
        android:textColor="@color/Ncolor"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="100dp"
        android:background="@color/common_signin_btn_dark_text_focused"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/result_p"
        android:textSize="40dp"
        android:textColor="@color/Pcolor"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="100dp"
        android:background="@color/common_signin_btn_dark_text_focused"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/result_k"
        android:textSize="40dp"
        android:textColor="@color/Kcolor"
        android:text=""/>
</LinearLayout>
